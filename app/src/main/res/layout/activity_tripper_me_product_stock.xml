<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tripper_me_product_stock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tripperme.tmpstock.TripperMeProductStockSplashScreenActivity">

    <TextView
        android:id="@+id/tmps_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="?android:attr/windowBackground"
        android:textSize="@dimen/font_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/tmps_sign_in"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="?android:attr/windowBackground"
            android:text="@string/tmps_sign_in"
            android:textColor="@color/colorPrimaryDark" />

        <view
            android:id="@+id/vertical_divider"
            class="android.support.v4.widget.Space"
            android:layout_width="@dimen/divider_space"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/tmps_sign_up"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="?android:attr/windowBackground"
            android:text="@string/tmps_sign_up"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</RelativeLayout>
